# Database
# Option 1: Local PostgreSQL (if installed)
# DATABASE_URL="postgresql://username:password@localhost:5432/quilltip"

# Option 2: Supabase (Free cloud PostgreSQL)
# Sign up at https://supabase.com and get your connection string
# DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres"

# Option 3: Neon (Free cloud PostgreSQL) 
# Sign up at https://neon.tech and get your connection string
DATABASE_URL=your_database_url_here

# Direct connection URL for migrations (bypasses pooler)
DIRECT_URL=your_direct_database_url_here

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_secret_key_here

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# OpenAI API (for AI features)
OPENAI_API_KEY=""

# Supabase Storage (Image Storage)
# Get these from your Supabase project dashboard → Settings → API
SUPABASE_URL="https://your-project-ref.supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"
SUPABASE_STORAGE_BUCKET="images"